<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainMenu">

    <fragment
        android:id="@+id/FirstFragment"
        android:name="com.example.shoppinglist.NewList"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_New_List">

        <action
            android:id="@+id/action_FirstFragment_to_MainMenu"
            app:destination="@id/mainMenu" />
    </fragment>
    <fragment
        android:id="@+id/SecondFragment"
        android:name="com.example.shoppinglist.SecondFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_second">

        <action
            android:id="@+id/action_SecondFragment_to_MainMenu"
            app:destination="@id/mainMenu" />
    </fragment>

    <fragment
        android:id="@+id/mainMenu"
        android:name="com.example.shoppinglist.MainMenu"
        android:label="fragment_main_menu"
        tools:layout="@layout/fragment_main_menu">

        <action
            android:id="@+id/action_mainMenu_to_FirstFragment"
            app:destination="@id/FirstFragment" />

        <action
            android:id="@+id/action_mainMenu_to_SecondFragment"
            app:destination="@id/SecondFragment" />

    </fragment>
</navigation>